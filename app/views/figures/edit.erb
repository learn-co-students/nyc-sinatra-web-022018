<h1> Create a Figure! </h1>
<form method='post' action="/figures/<%=@figure.id%>">
  <label> Name: </label id="figure[name]"><input type="text" name="figure[name]" id="figure_name" placeholder="<%=@figure.name%>">

  <br></br>

  <label>Title: </label id="title[name]">  <br></br>
  <% @titles.each do |title| %>
  <input type="checkbox" name="figure[title_ids][]" value="<%=title.id%>" id="title_<%=title.id%>"<%='checked' if @figure.titles.include?(title) %>><%= title.name %></input>
  <% end %>

  <br></br>

  <label>Landmarks: </label id="landmark[name]">  <br></br>
  <% @landmarks.each do |landmark| %>
  <input type="checkbox" name="figure[landmark_ids][]" value="<%=landmark.id%>" id="landmark_<%=landmark.id%>" <%='checked' if @figure.landmarks.include?(landmark) %>><%= landmark.name %></input>
  <% end %>

  <br></br>

  <h3> Or Create a Title or Landmark </h3>

  <label>Title Name: </label><input type="text" name="title[name]" id="new_title">

  <br></br>

  <label>Landmark Title: </label><input type="text" name="landmark[name]" id="new_landmark">

  <br></br>

  <input type="submit" id="Edit Figure" value="Edit Figure">
</form>
