<form action="/figures/<%=@figure.id%>" method="post">
  <input type="hidden" name="_method" value="patch">
  <br></br>
  Name: <input type="text" name="figure[name]" id="figure_name" value="<%=@figure.name%>">

  <label>Choose an Existing Landmark</label>

  <br></br>

  <% @landmarks.each do |landmark| %>
    <input type="checkbox" name="figure[landmark_ids][]" value="<%=landmark.id%>" id="<%=landmark.id%>" <%='checked' if @figure.landmarks.include?(landmark) %>><%=landmark.name%></input>
  <% end %>

  <br></br>

  <label>Or, choose a new Landmark</label>

  <br></br>

  <label>Landmark name:</label>
  <input type="text" name="landmark[name]" id="new_landmark">

  <br></br>

  <label>Choose an Existing Title</label>

  <% @titles.each do |title| %>
    <input type="checkbox" name="figure[title_ids][]" id="<%=title.id%>" value="<%=title.id%>" <%='checked' if @figure.titles.include?(title)%>><%=title.name%></input>
  <% end %>

  <br></br>

  <label>Or, choose a new Title</label>

  <br></br>
  <label>Title name:</label>
  <input type="text" name="title[name]" id="new_title">

  <br></br>
  <input type="submit" value="Edit Figure">

</form>
