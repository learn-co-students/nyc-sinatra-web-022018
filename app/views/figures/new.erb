<form action="/figures" method="post">
  Name: <input type="text" name="figure[name]" id="figure_name">
  <br>
  <br>
  <label>Titles:</label>
  <br>
  <%@titles.each do |title|%>
    <label><%=title.name%></label>
    <input type="checkbox" name="figure[title_ids][]" id="title_<%=title.id%>" value="<%=title.id%>" >
  <%end%>
    <br>
    <br>
  Landmarks:
    <br>
  <%@landmarks.each do |landmark|%>
  <label><%=landmark.name%></label>
    <input type="checkbox" name="figure[landmark_ids][]" id="landmark_<%=landmark.id%>" value="<%=landmark.id%>">
  <%end%>
  <br>
  <br>
    Create New Title: <input type="text" name="title[name]" id="new_title">
    Create New Landmark
    Name: <input type="text" name="landmark[name]" id="new_landmark">
    Date Completed: <input type="text" name="landmark[year_completed]">

  <input type="submit" value="Create New Figure">

</form>
